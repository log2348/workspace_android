                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/circle_image2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
