<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/gradient_01"
            android:gravity="center"
            android:text="text1"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/radius_01"
            android:gravity="center"
            android:text="text1"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/solid_01"
            android:gravity="center"
            android:text="text1"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/solid_02"
            android:gravity="center"
            android:text="text1"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 버튼 배경 바꾸러면 backgroundTint 속성 써야 한다 -->
        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="@drawable/gradient_01"
            android:text="button" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/gradient_01"
            android:text="button" />


    </LinearLayout>

    <!-- material io 소스 긁어와서 사용할 수 있다. -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        app:strokeColor="@color/black">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="text" />

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>